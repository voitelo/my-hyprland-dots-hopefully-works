{
  "layer": "top",
  "position": "top",
  "height": 30,

  "modules-left": ["cpu", "memory", "network"],
  "modules-center": ["custom/w1", "custom/w2", "clock", "custom/w3", "custom/w4"],
  "modules-right": ["custom/media", "pulseaudio", "battery", "brightness", "tray"],

  "clock": {
    "format": "⏳ {:%H:%M}",
    "tooltip-format": "📜 {:%A, %d %B %Y | %H:%M:%S}",
    "interval": 1
  },

  "cpu": {
    "format": "⚙️ {usage}%",
    "tooltip": true
  },

  "memory": {
    "format": "🧠 {used:0.1f}G",
    "tooltip": true
  },

  "network": {
    "format-wifi": "🕸️",
    "format-ethernet": "🧷 {ipaddr}",
    "format-disconnected": "⛔ No link",
    "tooltip": true
  },

  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-icons": {
      "default": ["🔈", "🔉", "🔊", "🎺", "📣", "📯"],
      "muted": "🔇"
    },
    "format-muted": "🔇 muted",
    "tooltip": true
  },

  "battery": {
    "format": "{icon} {capacity}%",
    "format-charging": "⚡ {icon} {capacity}%",
    "tooltip": true,
    "format-icons": ["🕯️", "🪫", "🔋", "⚔️", "🗡️", "🛡️", "🔥", "🌑", "🌕", "🪄"]
  },

  "brightness": {
    "format": "🕯️ {percentage}%",
    "tooltip": true
  },

  "custom/media": {
    "exec": "playerctl metadata --format '{{status}} {{artist}} - {{title}}' || echo 'No media playing'",
    "interval": 2,
    "format": "🎼 {}",
    "tooltip": "Now Playing"
  },

  "bars": [
    {
      "name": "dock",
      "layer": "top",
      "position": "bottom",
      "height": 48,
      "exclusive": true,
      "passthrough": false,
      "modules-left": ["custom/launcher"],
      "modules-center": ["custom/kitty", "custom/sober", "custom/vivaldi", "custom/dolphin"],
      "modules-right": []
    }
  ],

  "tray": {},

  "custom/w1": {
    "exec": "echo '♠️'",
    "interval": 3600,
    "on-click": "hyprctl dispatch workspace 1",
    "tooltip": "Sanctum I"
  },

  "custom/w2": {
    "exec": "echo '♠️'",
    "interval": 3600,
    "on-click": "hyprctl dispatch workspace 2",
    "tooltip": "Sanctum II"
  },

  "custom/w3": {
    "exec": "echo '♠️'",
    "interval": 3600,
    "on-click": "hyprctl dispatch workspace 3",
    "tooltip": "Sanctum III"
  },

  "custom/w4": {
    "exec": "echo '♠️'",
    "interval": 3600,
    "on-click": "hyprctl dispatch workspace 4",
    "tooltip": "Sanctum IV"
  }
}

